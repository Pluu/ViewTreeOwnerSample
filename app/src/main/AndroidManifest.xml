<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pluu.sample.viewtreelifecycle">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ViewTreeLifecycleSample.NoActionBar">

        <activity android:name=".DemoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".AActivity"
            android:label="1. Activity Lifecycle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BActivity"
            android:label="2. Fragment Lifecycle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluu.ui.demos.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>